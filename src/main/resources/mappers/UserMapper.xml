<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.mybatisstudy.mappers.UserMapper">

    <select id="findById" resultType="com.example.mybatisstudy.User">
        SELECT id,
               name,
               age,
               email
        FROM user
        WHERE id = #{id};
    </select></mapper>